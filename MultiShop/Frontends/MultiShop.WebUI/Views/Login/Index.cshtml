 @model CreateLoginDto

@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>MultiShop Login Səhifəsi</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/fonts/line-awesome/css/line-awesome.min.css">
	<!-- Jquery -->
	<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body class="form-v4">
	<div class="page-content">
		<div class="form-v4-content">
			<div class="form-left">
				<h2>MultiShop E-Ticarət</h2>
				<p class="text-1">MultiShop proyektimiz üzərindən e-ticarət - dən istifadə edə bilərsiniz, endirimli məhsullar və fürsətlərdən xəbərdar olmaq üçün 1 dəqiqədə qeydiyyatdan keçin.</p>
				<p class="text-2">Alış-Veriş etmək, səbətinizə məhsullar əlavə etmək, seçdiyiniz məhsulların siyahısını görmək üçün səhifəyə giriş etməlisiniz. Əgər hesabınız yoxdursa qeydiyyat bölməsinə keçərək hesab yarada bilərsiniz.</p>
				<div class="form-left-last">
					<a href="/Register/Index/" class="account">Qeydiyyat</a>
				</div>
			</div>
			<form class="form-detail" method="post">
				<h2>MultiShop Giriş Formu</h2>
				<div class="form-row form-row-1">
					<label for="your_username">İstafadəçi Adınız</label>
					<input type="text" id="your_username" asp-for="Username" class="input-text">
				</div>
				<div class="form-row form-row-1">
					<label for="your_password">Şifrəniz Adınız</label>
					<input type="password" id="your_password" asp-for="Password" class="input-text">
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Təsdiqlə">
				</div>
			</form>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
	
</body>
</html>