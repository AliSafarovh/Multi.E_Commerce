@model UpdateOfferDiscountDto
@{
    ViewData["Title"] = "UpdateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Endirim Təklifi Güncəlləmə Səhifəsi</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="OfferDiscountId" />
                        <label>Endirim Təklifi Başlığı</label>
                        <input type="type" class="form-control" asp-for="Title" />
                        <br />
                        <label>Endirim Təklifi Alt Başlığı</label>
                        <input type="type" class="form-control" asp-for="SubTitle" />
                        <br />
                        <label>Endirim Təklifi Görünümü</label>
                        <input type="type" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <label>Endirim Təklifi Buton Başlığı</label>
                        <input type="type" class="form-control" asp-for="ButtonTitle" />
                        <br />
                        <button class="btn btn-success">Endirim Təklifini Güncəllə</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>